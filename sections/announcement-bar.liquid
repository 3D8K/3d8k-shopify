<div class="flex w-full p-5  flex-col {{ section.settings.text_align }}" style="background-color: {{section.settings.bg_color}}; color: {{section.settings.text_color}}">{{ section.settings.text }}</div>

{% schema %}
  {
    "name": "Announcement bar",
    "max_blocks": 12,
    "class": "announcement-bar-section",
    "settings": [
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      }, {
        "type": "select",
        "id": "text_align",
        "label": "Text alignment",
        "options": [
          {
            "value": "items-left",
            "label": "Text left"
          }, {
            "value": "items-right",
            "label": "Text right"
          }, {
            "value": "items-center",
            "label": "Text center"
          }
        ]
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#000"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#fff"
      }
    ],
    "blocks": [
      {
        "type": "announcement",
        "name": "t:sections.announcement-bar.blocks.announcement.name"
      }
    ],
    "default": {
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  }
{% endschema %}